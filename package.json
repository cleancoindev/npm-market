{
	"name": "npm-market",
	"private": true,
	"version": "1.0.0",
	"description": "Market Contract for npm",
	"engines": {
		"node": "10.x"
	},
	"scripts": {
		"test": "truffle test",
		"pretest": "npm run build",
		"generate": "truffle compile && typechain --target truffle './build/**/*.json'",
		"deploy": "truffle migrate --network",
		"predeploy": "npm run build",
		"lint": "npm run lint:eslint && npm run lint:solium && npm run lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:solium": "solium --dir . --fix",
		"lint:format": "prettier --write '**/*.{sol,js,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "rm -f migrations/*.js && rm -f scripts/*.js && npm run generate"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@truffle/hdwallet-provider": "^1.0.29",
		"@types/bignumber.js": "^5.0.0",
		"@types/dotenv": "^8.2.0",
		"@types/node-fetch": "^2.5.5",
		"@types/request-promise": "^4.1.45",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"bignumber.js": "^9.0.0",
		"date-fns": "^2.9.0",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-xo": "^0.27.2",
		"eslint-config-xo-typescript": "^0.24.1",
		"eslint-plugin-prettier": "^3.1.2",
		"ethereum-bridge": "^0.6.2",
		"ethlint": "^1.2.5",
		"husky": "^4.2.1",
		"prettier": "^1.19.1",
		"prettier-plugin-solidity": "^1.0.0-alpha.37",
		"truffle": "^5.1.10",
		"truffle-typings": "^1.0.8",
		"ts-generator": "0.0.8",
		"ts-node": "^8.6.2",
		"typechain": "^1.0.4",
		"typechain-target-truffle": "^1.0.2",
		"typescript": "^3.7.5",
		"web3": "^1.2.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"dependencies": {
		"@dev-protocol/protocol": "^0.1.2",
		"@openzeppelin/contracts": "^2.4.0",
		"apollo-cache-inmemory": "^1.6.5",
		"apollo-client": "^2.6.8",
		"apollo-link-http": "^1.5.16",
		"graphql": "^14.6.0",
		"graphql-tag": "^2.10.3",
		"node-fetch": "^2.6.0",
		"promise-parallel-throttle": "^3.3.0"
	}
}
